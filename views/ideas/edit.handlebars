{{#each errors}}
	<div class="alert alert-danger">
		{{text}}
	</div>
{{else}}

{{/each}}

<div class="card card-body">
	<h3>想学的课程</h3>
	<form action="/ideas/{{idea.id}}?_method=PUT" method="post">
		<input type="hidden" name="_method" value="PUT">
		<div class="form-group">
			<lable for="title">标题</lable>
			<!--前端的判断，增加required表示不可为空-->
			<input type="text" name="title"  class="form-control" value="{{idea.title}}"/>
		</div>
		<div class="form-group">
			<lable for="details">详情</lable>
			<textarea name="details" class="form-control" >{{idea.details}}</textarea>
		</div>
		<button type="submit" class="btn btn-primary">编辑</button>
	</form>
</div>